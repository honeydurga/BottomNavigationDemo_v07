<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>
    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/cgyey</item>
        <item name="android:textColorPrimary">@color/cblue</item>
        <item name="android:textColorSecondary">@color/cblue</item>
        <item name="itemIconTint">@color/cgyey</item>
        <item name="actionMenuTextColor">@color/cblue</item>
    </style>
    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@color/white</item>
        <item name="itemIconTint">@color/cgyey</item>
        <item name="itemTextColor">@color/cgyey</item>
    </style>
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/cgyey</item>
    </style>

</resources>
